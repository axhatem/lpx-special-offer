---
import { Image } from 'astro:assets';
import { withBase } from "../../utils/config-utils.ts";
const toolImageUrl = withBase('/images/tool.png');
---

<div>
  <Image class={"image"} src={toolImageUrl} alt={"Tool"} width={29} height={29} />
  <p>JE CONSTRUIS</p>
</div>

<style>

div {
    background-color: #222;
    display: flex;
    border: 1px solid #717070;
    align-items: center;
  }

  .image {
    display:block;
    border-radius:inherit;
    object-position:center;
    object-fit:cover;
    padding: 2px;
    image-rendering:auto;
    border-right: 1px solid #717070;
  }

  
  p{
    width: 100%;
    font-weight: 500;
    text-align: center;
  }

 
</style>
