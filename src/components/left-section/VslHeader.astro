---
import { withBase } from "/src/utils/config-utils.ts";
const toolImageUrl = withBase('/images/tool.png');
---

<div>
  <img src={toolImageUrl} alt="Tool" />
  <p>JE CONSTRUIS</p>
</div>

<style>

div {
    background-color: #222;
    display: flex;
    border: 1px solid #717070;
    align-items: center;
  }

  img {
    display:block;
    width:29px;
    height:29px;
    border-radius:inherit;
    object-position:center;
    object-fit:cover;
    padding: 2px;
    image-rendering:auto;
    border-right: 1px solid #717070;
  }

  
  p{
    width: 100%;
    font-weight: 500;
    text-align: center;
  }

 
</style>
