---
import PulsingCircle from "../common/PulsingCircle.astro";
import { redColor } from "../../style/colors.ts";
---

<div class="available">
  <a href="https://google.fr">
    <p>DISPONIBLE</p>
    <PulsingCircle color={redColor} size="1rem" />
  </a>
</div>

<style>
  a {
    font-size: 1rem;
    text-decoration: none;
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    align-items: center;
    width: 150px;
    cursor: pointer;
    opacity: 0.77;
  }

  p {
    font-weight: 400;
    color: black;
    padding-bottom: 0.1rem;
  }
</style>
