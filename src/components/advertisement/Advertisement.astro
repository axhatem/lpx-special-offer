---
import { Image } from "astro:assets";
import { withBase } from "../../utils/config-utils.ts";
import { bannerBackgroundColor, redColor } from "../../style/colors.ts";
import PulsingCircle from "../common/PulsingCircle.astro";
const rightArrowSquareImageUrl = withBase("/images/right-arrow-square.svg");
const twitterXImageeUrl = withBase("/images/twitter-X-square.svg");
---

<section class="advertisement">
  <PulsingCircle color={redColor} size="1.4rem" />
  <p class="banner-text">
    Si tu vois cette page, c'est qu'il me&nbsp;<span class="underline"
      >reste 1 place</span
    >&nbsp;pour propulser ta Landing Page
  </p>
  <a href="https://google.fr" class="take-chance-container">
    <p class="take-chance">JE SAISIS MA CHANCE</p>
    <Image
      src={rightArrowSquareImageUrl}
      alt="Warning!"
      class="right-arrow-icon"
      width={50}
      height={50}
    />
    <Image
      src={twitterXImageeUrl}
      alt="Twitter-X"
      class="twitter-x-icon"
      width={50}
      height={50}
    />
  </a>
</section>

<style define:vars={{ bannerBackgroundColor, redColor }}>
  .advertisement {
    z-index: 1;
    position: fixed;
    gap: 1.8rem;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 5rem;
    background-color: #fcfcfc;
    box-shadow: 0 0.3rem 1rem 0 rgba(0, 0, 0, 0.5);
  }

  .banner-text {
    font-size: 1.4rem;
    padding-bottom: 0.1rem;
  }

  .banner-text span {
    font-size: 1.4rem;
  }

  .twitter-x-icon {
    position: absolute;
    top: 0.8rem;
    width: 3.2rem;
    height: 3.2rem;
    right: 0.8rem;
  }

  .right-arrow-icon {
    width: 1.6rem;
    height: 1.6rem;
  }

  .take-chance {
    color: var(--redColor);
    text-align: center;
    font-size: 1.2rem;
    font-style: normal;
    font-weight: 300;
    line-height: normal;
    letter-spacing: -0.3px;
    text-decoration-line: underline;
  }

  .take-chance-container {
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  a {
    text-decoration: none;
  }
</style>
