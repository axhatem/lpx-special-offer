---
import MainTitle from "./MainTitle.astro";
import SubTitle from "./SubTitle.astro";
import SimpleReview from "./SimpleReview.astro";
import CTA from "./cta/CTA.astro";
import AlertTitle from "./AlerteTitle.astro";
import ReturnCriteriaChecklist from "./return-criteria-checklist/ReturnCriteriaChecklist.astro";
---

<section>
  <SimpleReview />
  <MainTitle />
  <SubTitle />
  <AlertTitle />
  <ReturnCriteriaChecklist />
  <CTA />
</section>

<style>
  section {
    margin-top: 5rem;
    width: 800px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
    background-color: wheat;
    border: 1px solid #9b0c3e;
    background: #fff;
    box-shadow: 0px 4px 50px 0px rgba(0, 0, 0, 0.2) inset;
  }
</style>
