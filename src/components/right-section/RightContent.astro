---
import MainTitle from "./MainTitle.astro";
import SubTitle from "./SubTitle.astro";
import SimpleReview from "./SimpleReview.astro";
import CTA from "./cta/CTA.astro";
import AlertTitle from "./AlertTitle.astro";
import ReturnCriteriaChecklist from "./return-criteria-checklist/ReturnCriteriaChecklist.astro";
import ValidateStrategyTogether from "./ValidateStrategyTogether.astro";
import { withBase } from "../../utils/config-utils";
import { Image } from "astro:assets";
const leftDownArrowImageUrl = withBase("/images/left-down-arrow.svg");
---

<section>
  <Image
    src={leftDownArrowImageUrl}
    alt={"Video ICI"}
    width={100}
    height={100}
    class={"left-down-arrow"}
  />
  <SimpleReview />
  <MainTitle />
  <SubTitle />
  <AlertTitle />
  <ReturnCriteriaChecklist />
  <ValidateStrategyTogether />
  <CTA />
</section>

<style>
  .left-down-arrow {
    position: absolute;
    left: -10rem;
  }

  section {
    margin-top: 4rem;
    padding: 1rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background-color: wheat;
    border: 1px solid #9b0c3e;
    background: #fff;
    box-shadow: 0px 4px 50px 0px rgba(0, 0, 0, 0.2) inset;
    position: relative;
    height: fit-content;
  }

  @media (max-width: 1000px) {
    section {
      margin: auto;
      width: 90%;
    }
</style>
