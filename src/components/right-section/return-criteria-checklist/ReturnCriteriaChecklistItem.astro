---
import { Image } from "astro:assets";
import { withBase } from "../../../utils/config-utils";
const rightArrowSquareUrl = withBase("/images/checkbox.svg");

interface Props {
  content: string;
}

const { content } = Astro.props;
---

<li>
  <Image src={rightArrowSquareUrl} alt="Warning!" width={15} height={15} /><p>
    {content}
  </p>
</li>

<style>
  p {
    color: black;
    padding-bottom: 0.1rem;
  }

  li {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.2rem 0;
  }
</style>
