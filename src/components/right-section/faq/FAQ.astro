---
import { Image } from "astro:assets";
import { withBase } from "../../../utils/config-utils";
const twitterXImageUrl = withBase("/images/twitter-X.svg");
const faqItems = await Astro.glob("../../../content/faq/*.md");

console.log(faqItems.length);
---

<script>
  const ENABLE_MULTIPLE_COLLAPSE = false;

  document.addEventListener("DOMContentLoaded", () => {
    document.addEventListener("click", (event) => {
      const target = event.target as HTMLElement; // Type assertion here

      if (target.tagName === "SUMMARY" && !ENABLE_MULTIPLE_COLLAPSE) {
        document.querySelectorAll("details[open]").forEach((detail) => {
          if (detail !== target.parentNode) {
            // Now we can safely access parentNode
            detail.removeAttribute("open");
          }
        });
      }
    });
  });
</script>

<div class="faq">
  <p class="alert">
    <span class="bold-800">ALERTE !&nbsp;&nbsp;</span> Ne fais&nbsp;<span
      class="underline">pas appel à moi</span
    >&nbsp;avant d'être prêt
    <Image
      src={twitterXImageUrl}
      alt="Twitter-X"
      width={20}
      height={20}
      class="twitter-x-faq"
    />
  </p>
  <div class="accordion">
    {
      faqItems.map((faqItem) => (
        <details class="md-content">
          <summary>{faqItem.frontmatter.question}</summary>
          <div set:html={faqItem.compiledContent()} />
        </details>
      ))
    }
  </div>

  <style>
    .faq {
      padding: 1.5rem;
      background-color: black;
      width: 593px;
      box-shadow: 0px 4px 100px 0px rgba(0, 0, 0, 0.25);
    }

    .twitter-x-faq {
      width: 1rem;
      height: 1rem;
      position: relative;
      top: 0.025rem;
    }

    .alert {
      display: flex;
      align-items: center;
      text-align: center;
      font-size: 0.8rem;
      color: white;
    }

    .accordion {
      padding-top: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .accordion details {
      border: 1px solid #ddd;
      padding: 10px;
      color: white;
      margin-bottom: 5px;
    }

    .accordion summary {
      color: white;
      cursor: pointer;
    }

    .accordion div {
      margin: 1.25rem 1rem;
    }
  </style>
</div>
