---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Landing Page X" />
    <meta property="og:description" content="Landing Page X" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Landing Page X" />
    <meta name="twitter:description" content="Landing Page X" />

    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="pragma" content="no-cache" />

    <title>{title}</title>

    <script
      async
      type="text/javascript"
      src="https://static.senja.io/dist/platform.js"></script>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      html,
      body,
      p,
      table,
      div,
      table,
      h1,
      h2,
      h3,
      h4,
      h5 {
        padding: 0;
        margin: 0;
      }

      h2 {
        font-weight: 400;
      }

      html,
      body {
        height: 100%;
      }

      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      span,
      button {
        color: white;
      }

      body {
        background-color: #01011b;
        font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI",
          Roboto, Ubuntu;
      }

      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
    </style>
  </body>
</html>
