---
import Footer from "../components/Footer.astro";
import LeftContent from "../components/left-section/LeftContent.astro";
import RightContent from "../components/right-section/RightContent.astro";
import Layout from "../layouts/Layout.astro";
import Telegram from "../components/Telegram.astro";
import Advertisement from "../components/advertisement/Advertisement.astro";
import WhatsApp from "../components/WhatsApp.astro";
---

<Layout title="Welcome to Astro.">
  <Advertisement />
  <div class="container">
    <div class="content">
      <LeftContent />
      <RightContent />
    </div>
    <Footer />
  </div>
  <Telegram />
  <WhatsApp />
</Layout>

<style>
  .container {
    min-height: 100lvh;
    display: flex;
    width: 100%;
    flex-direction: column;
    margin-left: auto;
    margin-right: auto;
  }

  .content {
    width: 100%;
    max-width: 62.5rem;
    display: flex;
    flex-grow: 1;
    gap: 2rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 1000px) {
    .content {
      max-width: 100%;
      flex-direction: column;
      gap: 0rem;
      margin: 0;
    }
  }
</style>
